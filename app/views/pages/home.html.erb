<style>
.banner h1 {
    text-align: center;
    font-size: 100px;
    margin-bottom: 10px;
}

.banner h2 {
    text-align: center;
    color: #555;
    text-decoration: line-through;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: auto;
    margin-bottom: 20px;
}

.due-today-table {
    border-collapse: collapse;
    width: 50%;
    margin: auto; 
    margin-bottom: 10px;
}

.due-today-table th,
.due-today-table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
}

.due-today-table th {
    background-color: #f2f2f2;
}

.due-today-table tr:nth-child(even) {
    background-color: #f2f2f2;
}

.due-today-table tr:hover {
    background-color: #ddd;
}

.button {
    text-decoration: none;
    color: inherit;
    display: block;
    text-align: center;
    font-size: 20px;
    margin: 20px auto;
}

p {
    display: block;
    text-align: center;
    margin: 20px auto;
}
.banner1 h1 {
    text-align: center;
    font-size: 100px;
    margin-bottom: 10px;
}

.banner1 h2 {
    margin-left: 280px;
    font-size: 40px;
    margin-bottom: 10px;
}

</style>

<% if user_signed_in? %>
  <div class="banner1">
    <h1>Welcome to Tasker!</h1>
    <h2>Today:</h2>
  </div>
  <% tasks_due_today = current_user.tasks.where(due_date: Date.today) %>
  <% if tasks_due_today.any? %>
    <div class="container">
      <table class="due-today-table">
        <thead>
          <tr>
            <th>Task Name</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <% tasks_due_today.each do |task| %>
            <tr>
              <td><%= task.name %></td>
              <td><%= task.due_date %></td>
              <td><%= task.status ? 'Completed' : 'Pending' %></td>
              <td><%= task.category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="div-button">
    <%= link_to 'See Categories', categories_path, class: 'button' %>
    </div>
  <% else %>
    <div class="div-button">
    <p>No tasks due today.</p>
    <%= link_to 'See Categories', categories_path, class: 'button' %>
    </div>
  <% end %>
<% else %>
  <div class="banner">
    <h1>Tasker •ᴗ•</h1>
    <h2>List and track</h2>
  </div>
<% end %>
